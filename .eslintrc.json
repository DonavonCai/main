{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": ["airbnb", "prettier", "prettier/react", "plugin:import/warnings"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "document": true,
        "window": true,
        "process": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions" : [".js", ".jsx"]
        }],
        "quotes": 0,
        "one-var": 0,
        "strict": 2,
        "camelcase": 2,
        "import/no-unresolved": 0,
        "no-mixed-spaces-and-tabs": 2,
        "no-unused-vars": 2,
        "no-console": 0
    }
}